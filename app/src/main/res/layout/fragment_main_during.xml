<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="opensource.zeocompanion.fragments.MainDuringFragment">

    <Button
        android:id="@+id/button_wokeup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Woke Up"
        android:textSize="30sp"
        android:textColor="#000000"
        android:background="@color/colorDataEntry"
        android:clickable="true"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/spinner_didSomething" />

    <com.android.EvtSpinner
        android:id="@+id/spinner_didSomething"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="left|center_vertical"
        android:spinnerMode="dropdown"
        android:popupBackground="@color/colorSpinnerDropdown" />

    <Button
        android:id="@+id/button_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrying to Sleep"
        android:textSize="30sp"
        android:textColor="#000000"
        android:background="@color/colorDataEntry"
        android:enabled="true"
        android:clickable="true"
        android:layout_below="@id/spinner_didSomething"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/imageView_dimout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha=".85"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView_dimout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textSize="24sp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>
