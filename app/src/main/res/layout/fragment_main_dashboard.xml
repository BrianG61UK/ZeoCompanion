<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="opensource.zeocompanion.fragments.MainDashboardFragment">

    <TextView
        android:id="@+id/textView_trendtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last 7 Session Trend; tap for expanded graphing"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <opensource.zeocompanion.views.TrendsGraphView
        android:id="@+id/graph_trends"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/textView_trendtitle"
        android:layout_toLeftOf="@+id/radioGroup"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textView_trendtitle" >

        <RadioButton
            android:id="@+id/radioButton_deep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textSize="16sp"
            android:text="Deep% Total" />

        <RadioButton
            android:id="@+id/radioButton_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textSize="16sp"
            android:text="Light% Total" />

        <RadioButton
            android:id="@+id/radioButton_rem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textSize="16sp"
            android:text="REM% Total" />

        <RadioButton
            android:id="@+id/radioButton_awake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textSize="16sp"
            android:text="Awake% Total"  />

        <RadioButton
            android:id="@+id/radioButton_time2z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textSize="16sp"
            android:text="Time2Z% Total"  />

        <RadioButton
            android:id="@+id/radioButton_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textSize="16sp"
            android:text="Total% Goal" />

        <RadioButton
            android:id="@+id/radioButton_zq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="ZQ" />

    </RadioGroup>

</RelativeLayout>
