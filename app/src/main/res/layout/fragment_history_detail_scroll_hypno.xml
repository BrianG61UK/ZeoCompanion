<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.HistoryDetailScrollHypnoDialogFragment" >

    <Button
        android:id="@+id/button_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done" />

    <CheckBox
        android:id="@+id/checkBox_showAmended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Amended"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/button_done" />

    <opensource.zeocompanion.views.HypnogramView
        android:id="@+id/graph_hypnoScroll1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/button_done" />

    <opensource.zeocompanion.views.HypnogramView
        android:id="@+id/graph_hypnoScroll2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/button_done" />

</RelativeLayout>
