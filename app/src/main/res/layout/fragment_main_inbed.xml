<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="opensource.zeocompanion.fragments.MainInbedFragment">

    <Button
        android:id="@+id/button_inbed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Got into Bed"
        android:textSize="30sp"
        android:textColor="#000000"
        android:background="@color/colorDataEntry"
        android:layout_gravity="left"
        android:clickable="true"
        android:enabled="true" />

    <com.android.EvtSpinner
        android:id="@+id/spinner_doing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:popupBackground="@color/colorSpinnerDropdown"
        android:layout_marginTop="33dp"
        android:layout_below="@id/button_inbed"/>

    <Button
        android:id="@+id/button_gotoSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now Trying To Sleep"
        android:textSize="30sp"
        android:textColor="#000000"
        android:background="@color/colorDataEntry"
        android:layout_gravity="left"
        android:enabled="true"
        android:clickable="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/spinner_doing"/>

    <ImageView
        android:id="@+id/imageView_dimout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha=".85"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView_dimout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textSize="24sp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>
