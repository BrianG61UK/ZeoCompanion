<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOffBlack3"
    tools:context=".fragments.EditTextDialogFragment">

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_cancel"
        android:layout_toEndOf="@+id/button_cancel" />

    <EditText
        android:id="@+id/editText_theText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_cancel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorDataEntry"
        android:textSize="24sp"
        android:textColor="#000000"
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1"
        android:imeActionId="5"
        android:imeOptions="actionNext"
        android:imeActionLabel="Next" />

    <EditText
        android:id="@+id/editText_theText2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_theText1"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorDataEntry"
        android:visibility="invisible"
        android:textSize="24sp"
        android:textColor="#000000"
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1"
        android:imeActionId="6"
        android:imeOptions="actionDone"
        android:imeActionLabel="Done" />

</RelativeLayout>
